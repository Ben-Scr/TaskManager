<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="832" Width="1280"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="435"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="140"/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="{StaticResource AccentDark}"/>
        <Rectangle Fill="{StaticResource TaskListBackground}" Grid.Column="1"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="38"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Label Style="{StaticResource Heading1}"
                   Content="Tasks" 
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   Padding="20 0 0 0" IsHitTestVisible="False"/>

            <Button Style="{StaticResource RoundAccentButton}"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center"
                    Width="40"
                    Height="40"
                    Margin="0 0 20 0">

                <Viewbox Width="16"
                         Height="16">
                    <Path Data="{StaticResource NewTaskIcon}" Fill="{StaticResource OnAccent}"/>
                </Viewbox>
            </Button>

            <TextBox Grid.Row="1"
                     Grid.Column="3"
                     Name="TaskSearchBox"
                     Style="{StaticResource TaskListSearchBox}"
                     Margin="20 0"
                     />

            <Label Grid.Row="1"
                   IsHitTestVisible="False"
                   Content="Seach Tasks..."
                   VerticalAlignment="Center"
                   Margin="40 0 0 0"
                   Foreground="{StaticResource Borders}"
                   Visibility="{Binding Text.IsEmpty, ElementName=TaskSearchBox, Converter={StaticResource BooleanToVisibilityConverter}}">

            </Label>

            <Button Grid.Row="1"
                    Style="{StaticResource SearchButton}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0 0 30 0"
                    Padding="10"
                    Width="30"
                    Height="30"
                    Background="Gray">
                <Viewbox Width="16" Height="16">
                    <Image Source="Assets/Images/image.png"/>
                </Viewbox>
            </Button>

            <ListView Grid.Row="2"
                      Background="Transparent"
                      Margin="0 20"
                      BorderBrush="Transparent">

            </ListView>
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Grid Margin="20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Task Title"
                           Style="{StaticResource Title}"
                           VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="20 5"
                        CornerRadius="5"
                        Background="{StaticResource Importance-Urgent}">
                    <TextBlock Text="Urgent"
                               Foreground="{StaticResource OnAccent}"
                               FontWeight="Bold"
                               FontSize="16"/>
                </Border>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <TextBlock Text="Description"
                               Foreground="{StaticResource Borders}"
                               Margin="0 20 0 0"
                               FontSize="16"
                               TextWrapping="Wrap"/>
                </ScrollViewer>

                <TextBlock Grid.Row="2"
                           Text="Due: 2024-06-30"
                           Background="{StaticResource AccentDark}"
                           Padding="20 3"
                           Foreground="{StaticResource Borders}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="14"/>
            </Grid>

            <ListView Grid.Row="1"
                      Background="Transparent"
                      BorderThickness="0"
                      Margin="0 20 0 0">
                
            </ListView>
        </Grid>

        <Rectangle Fill="{StaticResource TaskStatusBackground}"  Grid.Column="3"/>
    </Grid>
</Window>
