<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="832" Width="1280"
        MinHeight="500"
        MinWidth="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Storyboard x:Key="SlideOnBoard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                             From="0.0" 
                             To="1.0" 
                             Duration="0:0:1">

                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                   From="0 100 0 0" 
                   To="0 0 0 0" 
                   Duration="0:0:1">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
    </Window.Resources>
    
    <Grid>
        <Grid.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard Storyboard="{StaticResource SlideOnBoard}"/>
            </EventTrigger>
        </Grid.Triggers>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="435"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="140"/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="{StaticResource AccentDark}"/>
        <StackPanel Margin="10 15 10 10">
            <Button Style="{StaticResource TaskManagerNavButton}">
                <Viewbox Width="25" Height="25">
                    <Path Fill="White"/> <!-- Icon Missing -->
                </Viewbox>
            </Button>

            <Button Style="{StaticResource TaskManagerNavButton}">
                <Viewbox Width="25" Height="25">
                    <Path Fill="White"/>
                    <!-- Icon Missing -->
                </Viewbox>
            </Button>

            <Button Style="{StaticResource TaskManagerNavButton}">
                <Viewbox Width="25" Height="25">
                    <Path Fill="White"/>
                    <!-- Icon Missing -->
                </Viewbox>
            </Button>
        </StackPanel>
        
        <Rectangle Fill="{StaticResource TaskListBackground}" Grid.Column="1"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="38"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Label Style="{StaticResource Heading1}"
                   Content="Tasks" 
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   Padding="20 0 0 0" IsHitTestVisible="False"/>

            <Button Style="{StaticResource RoundAccentButton}"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center"
                    Width="40"
                    Height="40"
                    Margin="0 0 20 0">

                <Viewbox Width="16"
                         Height="16">
                    <Path Data="{StaticResource NewTaskIcon}" Fill="{StaticResource OnAccent}"/>
                </Viewbox>
            </Button>

            <TextBox Grid.Row="1"
                     Grid.Column="3"
                     Name="TaskSearchBox"
                     Style="{StaticResource TaskListSearchBox}"
                     Margin="20 0"
                     />

            <Label Grid.Row="1"
                   IsHitTestVisible="False"
                   Content="Seach Tasks..."
                   VerticalAlignment="Center"
                   Margin="40 0 0 0"
                   Foreground="{StaticResource Borders}"
                   Visibility="{Binding Text.IsEmpty, ElementName=TaskSearchBox, Converter={StaticResource BooleanToVisibilityConverter}}">

            </Label>

            <Button Grid.Row="1"
                    Style="{StaticResource SearchButton}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0 0 30 0"
                    Padding="10"
                    Width="30"
                    Height="30"
                    Background="Gray">
                <Viewbox Width="16" Height="16">
                    <Image Source="Assets/Images/image.png"/>
                </Viewbox>
            </Button>

            <ListView Grid.Row="2"
                      Background="Transparent"
                      Margin="0 20"
                      BorderBrush="Transparent">

            </ListView>
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Grid Margin="20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Task Title"
                           Style="{StaticResource Title}"
                           VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="20 5"
                        CornerRadius="5"
                        Background="{StaticResource Importance-Urgent}">
                    <TextBlock Text="Urgent"
                               Foreground="{StaticResource OnAccent}"
                               FontWeight="Bold"
                               FontSize="12"/>
                </Border>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <TextBlock Text="Description"
                               Foreground="{StaticResource Borders}"
                               Margin="0 20 0 0"
                               FontSize="16"
                               TextWrapping="Wrap"/>
                </ScrollViewer>

                <TextBlock Grid.Row="2"
                           Text="Due: 2024-06-30"
                           Background="{StaticResource AccentDark}"
                           Padding="20 3"
                           Foreground="{StaticResource Borders}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="14"/>
            </Grid>

            <Grid  Grid.Row="1"
                   Margin="0 20 0 0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <TextBlock Style="{StaticResource Title}"
                           Text="Task Check List"
                           VerticalAlignment="Center"
                           Margin="20 0 0 0"/>


                <ListView Grid.Row="1"
                          Background="Transparent"
                          BorderThickness="0"
                         >
                </ListView>
            </Grid>

            <Grid Grid.Row="2">
                <Button Style="{StaticResource TaskViewDeleteButton}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="Delete"
                        Margin="20 0 0 0"/>

                <Button Style="{StaticResource TaskViewEditButton}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Edit"/>
                
                <Button Style="{StaticResource TaskViewCompleteButton}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Content="Complete"
                        Margin="0 0 20 0"/>
            </Grid>
        </Grid>

        <Rectangle Fill="{StaticResource TaskStatusBackground}"  Grid.Column="3"/>

        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="140"/>
            </Grid.RowDefinitions>
        </Grid>
    </Grid>
</Window>
